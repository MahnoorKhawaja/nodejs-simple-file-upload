<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>File Upload</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f7f9fc;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 40px;
        }
        
        .upload-box {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            margin-bottom: 40px;
        }
        
        .form-control {
            border-radius: 6px;
        }
        
        .btn-upload {
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            font-weight: 500;
        }
        
        .gallery img {
            max-width: 100%;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>

    <!-- Upload Form -->
    <div class="upload-box">
        <h2 class="text-center">Upload Your Images</h2>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <input class="form-control" type="file" name="file" id="file" multiple>
            </div>
            <button type="submit" class="btn btn-primary btn-upload">Upload</button>
        </form>
    </div>

    <!-- Image Gallery -->
    <% if (images && images.length > 0) { %>
        <h3 class="mb-4">Uploaded Images</h3>
        <div class="row gallery">
            <% images.forEach(url => { %>
                <div class="col-md-3 mb-3">
                    <img src="<%= url %>" class="img-fluid" alt="Uploaded Image">
                </div>
                <% }) %>
        </div>
        <% } else { %>
            <p class="text-muted">No images uploaded yet.</p>
            <% } %>

                <script>
                    // Reset file input on load
                    window.onload = () => {
                        document.getElementById("file").value = "";
                    };
                </script>
</body>

</html>